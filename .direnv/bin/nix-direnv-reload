#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/willsturgeon/Desktop/Code/metacoq" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/willsturgeon/Desktop/Code/metacoq")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/willsturgeon/Desktop/Code/metacoq" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/willsturgeon/Desktop/Code/metacoq/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/willsturgeon/Desktop/Code/metacoq/.envrc" "/Users/willsturgeon/Desktop/Code/metacoq/.direnv"/*.rc
